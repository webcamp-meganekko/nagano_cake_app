
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">

    名前　(姓) <%= f.text_field :first_name, autofocus: true, placeholder: "令和" %>
    (名) <%= f.text_field :last_name, autofocus: true, placeholder: "道子" %><br>
    フリガナ　(セイ) <%= f.text_field :first_name_kana, autofocus: true, placeholder: "レイワ" %>
    (メイ) <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
  </div>
  
    <div class="field">
    メールアドレス　<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>
  
  <div class="field">
    郵便番号(ハイフンなし) <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %><br>
    住所 <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
  
  <div class="field">
    電話番号(ハイフンなし) <%= f.text_field :tell, autofocus: true, placeholder: "0000000000" %><br>
  </div>

  <div class="field">
    パスワード(6文字以上) <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    パスワード(確認用) <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

既に登録済みの方<br>
      <%= link_to "こちら",  new_customer_session_path %>
    からログインしてください
