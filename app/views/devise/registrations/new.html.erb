  <div class="row mt-4 mb-4">
    <div class="col">
      <h4 class="d-inline bg-gray pr-4 pl-4">新規会員登録</h4>
    </div>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field row col-xs-12 pt-3">
    <%= f.label "名前", class: "col-3" %>
    <%= f.text_field :last_name, autofocus: true, placeholder: "(姓) 令和", class: "col-3 form-ph" %>
    <%= f.text_field :first_name, autofocus: true, placeholder: "(名)　道子", class: "col-3 ml-3 form-ph" %>
  </div>

  <div class="field row col-xs-12 pt-1">
    <%= f.label "フリガナ", class: "col-3" %>
    <%= f.text_field :last_name_kana, autofocus: true, placeholder: "(セイ) レイワ", class: "col-3 form-ph" %>
    <%= f.text_field :first_name_kana, autofocus: true, placeholder: "(メイ) ミチコ", class: "col-3  ml-3 form-ph" %>
  </div>

  <div class="field row col-xs-12 pt-1">
    <%= f.label "メールアドレス", class: "col-3" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "col-3 form-ph" %>
  </div>

  <div class="field row col-xs-12 pt-1">
    <%= f.label "郵便番号(ハイフンなし) ", class: "col-3" %>
    <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "col-2 form-ph" %>
  </div>

  <div class="field row col-xs-12 pt-1">
    <%= f.label "住所", class: "col-3" %>
    <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-6 form-ph" %>
  </div>

  <div class="field row col-xs-12 pt-1">
    <%= f.label "電話番号(ハイフンなし)", class: "col-3" %>
    <%= f.text_field :tell, autofocus: true, placeholder: "0000000000", class: "col-2 form-ph" %>
  </div>

  <div class="field row col-xs-12 pt-1">
    <%= f.label "パスワード(6文字以上）", class: "col-3" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field row col-xs-12 pt-1">
    <%= f.label "パスワード(確認用)", class: "col-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions pt-3 col-xs-12">
   　<%= button_tag :method => :get, :class => "btn" do %>
    <span class= "col btnripple">
      <%= image_tag "new_registration.png", class: 'img-fluid border border-0',size: "80x50"  %>
    </span>
    <% end %>
  </div>
<% end %>

  <div class="row mt-4 pt-3 mb-4">
    <div class="col">
      <h4 class="d-inline bg-gray pr-4 pl-4">既に登録済みの方</h4>
    </div>
  </div>

    <div class="pt-2 px-5 mb-5">
      <%= link_to new_customer_session_path do %>
        <div class="btnripple">
        <%= image_tag 'add_capcake.png', class: 'img-fluid', size: "50x40" %>
        </div><% end %>
      <span>からログインしてください</span>
   </div>

