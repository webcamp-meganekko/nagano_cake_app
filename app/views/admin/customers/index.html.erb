<div class="row m-4">
  <div class="col">
    <h5 class="d-inline bg-gray pr-3 pl-3">会員一覧</h5>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 m-auto">
    <table class="table">
      <thead>
        <tr class="bg-gray">
          <th style="width: 20%">会員ID</th>
          <th style="width: 25%">氏名</th>
          <th style="width: 25%">メールアドレス</th>
          <th style="width: 25%">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to full_name(customer), admin_customer_path(customer) %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_valid == true %>
              <p class="text-success">有効</p>
              <% else %>
              <p class="text-secondary">退会</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>