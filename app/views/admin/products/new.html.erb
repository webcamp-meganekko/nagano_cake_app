
      <h5>商品新規登録</h5>

       <%= form_with model: [:admin, @product], local:true do |f| %>

        <p>商品画像</p>
        <div><%= f.attachment_field :image %></div>



      　<p>商品名</p>
        <div><%= f.text_field :product_name, placeholder: "商品名" %></div>



      　<p>商品説明</p>
        <div><%= f.text_area :introduction, placeholder: "ここに説明文" %></div>

      　<p>ジャンル</p>
          %= f.collection_select :genre_id, Genre.all %>


      　<p>税抜価格</p>
        <p><%= f.text_field :price, placeholder: "1000" %> 円</p>


      　<p>販売ステータス</p>
      　<%= f.radio_button :is_sale, :true %>
      　<%= f.label :is_sale, "販売中", {value: :true, style: "display: inline-block;"} %>
      　<%= f.radio_button :is_sale, :false %>
      　<%= f.label :is_sale, "販売停止中", {value: :false, style: "display: inline-block;"} %>


      <%= f.submit '新規登録' %>

  <% end %>