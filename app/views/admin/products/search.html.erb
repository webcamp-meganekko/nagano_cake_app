<%= render "admin/products/search_form" %>

<div class="row justify-content-center mt-3">
  <div class="col-md-10">
    <h5>検索ワード　"<%= @word %>"</h5>
       <td><%= link_to "add product",  new_admin_product_path %></td>
      <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
         </tr>
      </thead>
      <tbody>
          <% @search_products.each do |product| %>
        <tr>
          <td>
            <%= product.id %>
          </td>
          <td>
            <%= link_to product.product_name, admin_product_path(product.id) %>
          </td>
          <td>
            <%= product.price.to_s(:delimited) %>
          </td>
          <td>
            <%= product.genre.genre_name %>
            </td>

          <% if product.is_sale == true %>
            <td  class="text-success">
              <%= product.is_sale_to_string %>
            </td>
          <% else %>
            <td  class="text-secondary">
              <%= product.is_sale_to_string %>
            </td>
          <% end %>
        </tr>
      <% end %>

      
      </tbody>
    </table>
    <div class="row">
    <div class="col-md-4 offset-md-5 pl-5 mt-3">
      <%= paginate @products %>
    </div>
  </div>

  </div>
</div>

