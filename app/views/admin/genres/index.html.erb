<div class="row m-4">
  <div class="col">
    <h5 class="d-inline bg-gray pr-3 pl-3">ジャンル一覧・追加</h5>
  </div>
</div>
  <%= form_with model: @genre, url: admin_genres_path,local:true do |f| %>
  <%= render 'shaerd/error_messages', object: f.object %>
  <div class="form-group row">
      <%= f.label :genre_name, 'ジャンル名',  class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-3">
      <%= f.text_field :genre_name, class: 'form-control genre_name', placeholder: 'ジャンル名' %>
    </div>
    <div class="col-sm-2">
      <%= button_tag :method => :get, :class => "btn py-0 clear-decoration", onfocus: "this.blur();" do %>
      <span class= "col btnripple ">
        <%= image_tag "new.png", class: 'img-fluid border border-0',size: "60x40"  %>
      </span>
        <% end %>
    </div>
  </div>
  <% end %>
<div class="row">
  <div class="col-sm-5 mt-3">
    <table class="table">
      <thead>
        <tr class="bg-gray">
          <th>ジャンル名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.genre_name %>
            </td>
            <td class="d-flex justify-content-center">
              <%= link_to  edit_admin_genre_path(genre), class: "text-right ml-3" do%>
                <div class="btnripple">
                <%= image_tag 'edit.png', class: 'img-fluid', size: "60x50" %>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>