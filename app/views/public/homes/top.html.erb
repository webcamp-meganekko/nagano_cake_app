<!--ジャンル検索機能の追加-->

<div class="row">
    <div class="w-50 mx-auto mt-2">
<h4 class="col-12 pt-5">商品一覧</h4>

<div class="card w-50 mx-auto mt-4 shadow-lg">
    <% @products.first(4).each do |product| %>
        <%= link_to product_path(product.id) do %> 
            <%= attachment_image_tag product, :image, :fill, 220, 220, format: 'jpeg', class: "card-img-top" %>
        <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-10">
            <p class="card-title">
               <%= product.product_name %>
            </p>
            <p class="card-text">¥<%= product.price %></p>
          </div>
        </div>
      </div>
    <% end %>
</div>

<br>
<%= link_to '全ての商品を⾒る >', products_path, class: "text-right ml-3" %>

    </div>
</div>