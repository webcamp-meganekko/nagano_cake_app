<div class="row m-4">
  <div class="col">
    <h5 class="d-inline bg-gray pr-3 pl-3 page-title">Edit member information</h5>
  </div>
</div>

<%= form_with(model:@customer, url:customer_path, local: true, method: :put) do |f| %>
  <%= render 'shaerd/error_messages', object: f.object %>
  <div class="form-group row">
      <%= f.label :name, '氏名', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-3">
      <%= f.text_field :last_name, class: 'form-control first_name' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name, class: 'form-control last_name' %>
    </div>
  </div>

  <div class="form-group row">
      <%= f.label :name_kana, 'フリガナ', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-3">
      <%= f.text_field :last_name_kana, class: 'form-control first_name_kana' %>
    </div>
    <div class="col-sm-3">
      <%= f.text_field :first_name_kana, class: 'form-control last_name_kana' %>
    </div>
  </div>
  <div class="form-group row">
      <%= f.label :postal_code, '郵便番号', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-3">
      <%= f.text_field :postal_code, class: 'form-control postal_code' %>
    </div>
  </div>
  <div class="form-group row">
      <%= f.label :address, '住所', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-6">
      <%= f.text_field :address, class: 'form-control address' %>
    </div>
  </div>
  <div class="form-group row">
      <%= f.label :tell, '電話番号', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-3">
      <%= f.text_field :tell, class: 'form-control tell' %>
    </div>
  </div>
  <div class="form-group row">
      <%= f.label :email, 'メールアドレス', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-3">
      <%= f.text_field :email, class: 'form-control email' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
       <%= button_tag :method => :get, :class => "btn", onfocus: "this.blur();" do %>
      <span class= "col btnripple">
        <%= image_tag "edit.png", class: 'img-fluid border border-0',size: "70x50"  %>
      </span>
      <% end %>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-3">
      <%= link_to  customers_quit_confirm_path do %>
        <div class="btnripple">
        <%= image_tag 'withdraw.png', class: 'img-fluid', size: "140x100" %>
        </div><% end %>
    </div>
  </div>
  <% end %>
