<div class="row justify-content-center mt-3 mb-5">
  <div class="col-md-10">
    <h4 class="page-title">Order history list</h4>
      <table class="table table-hover table-inverse table-bordered mb-5">
        <thead class="bg-light">
          <tr>
             <th class="page-title">注文日</th>
             <th class="page-title">配送先</th>
             <th class="page-title">注文商品</th>
             <th class="page-title">支払金額</th>
             <th class="page-title">ステータス</th>
             <th class="page-title">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr class="page-title">
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= order.address %></td>
              <td>
                <% order.order_products.each do |order_product| %>
                  <%= order_product.product.product_name %><br>
                <% end %>
              </td>
              <td>¥<%= order.total_price.to_s(:delimited) %></td>
              <td><%= order.order_status %></td>
              <td><%= link_to  order_path(order) do %>
                <div class="btnripple">
                <%= image_tag 'show.png', class: 'img-fluid', size: "70x50" %>
                </div><% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
