<div class="row">
  <div class="col">
    <h1>配送先編集</h1>
    <%= form_with model:@address,local:true do |f| %>
    <div class="form-group">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code, class: 'form-control-plaintext address_postal_code' %>
    </div>
    <div class="form-group">
      <%= f.label :street_address %>
      <%= f.text_field :street_address, class: 'form-control-plaintext address_street_address' %>
    </div>
    <div class="form-group">
      <%= f.label :receve_name %>
      <%= f.text_field :receve_name, class: 'form-control-plaintext address_receve_name' %>
    </div>
    <div class="form-group">
      <%= f.submit '変更内容を保存', class: 'form-control-plaintext btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>