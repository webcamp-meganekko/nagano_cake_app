<div class="row">
  <h1>配送先登録/一覧</h1>
  <div class="col">
    <%= form_with model: @address,local:true do |f| %>
    <div class="form-group">
      <%= f.label :postal_code%>
      <%= f.text_field :postal_code, class: 'form-control-plaintext address_postal_code' %>
    </div>
    <div class="form-group">
      <%= f.label :street_address %>
      <%= f.text_field :street_address, class: 'form-control-plaintext address_street_address' %>
    </div>
    <div class="form-group">
      <%= f.label :receve_name %>
      <%= f.text_field :receve_name, class: 'form-control-plaintext address_receve_name' %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: 'form-control-plaintext btn btn-success' %>
    </div>
    <% end %>
  </div>
  <div class="col-9">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="bg-secondary" style="width: 10%">郵便番号</th>
          <th class="bg-secondary" style="width: 40%">住所</th>
          <th class="bg-secondary" style="width: 10%">宛名</th>
          <th class="bg-secondary" style="width: 30%"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.street_address %>
            </td>
            <td>
              <%= address.receve_name %>
            </td>
            <td>
              <%= link_to '編集', edit_address_path(address), class: 'btn btn-success' %>
              <%= link_to '削除する', address_path(address), method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>