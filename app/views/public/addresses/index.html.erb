<div class="row m-4">
  <div class="col">
    <h5 class="d-inline bg-gray pr-3 pl-3 page-title">Address New / List</h5>
  </div>
</div>
<div id="address_form_new">
  <%= render 'public/addresses/form', address: @address %>
</div>
<div class="row mb-5">
  <div class="col-sm-8">
    <table class="table table-bordered">
      <thead>
        <tr class="bg-gray">
          <th style="width: 15%">郵便番号</th>
          <th style="width: 30%">住所</th>
          <th style="width: 15%">宛名</th>
          <th style="width: 30%"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.street_address %></td>
            <td><%= address.receve_name %></td>
            <td>
              <div class="d-flex justify-content-around">
                <%= link_to  edit_address_path(address) do %>
                  <div class="btnripple">
                    <%= image_tag 'edit.png', class: 'img-fluid mt-2', size: "60x40" %>
                  </div>
                <% end %>
                <%= link_to  address_path(address), method: :delete do %>
                  <div class="btnripple">
                    <%= image_tag 'delete.png', class: 'img-fluid my-2 pt-1', size: "75x40" %>
                  </div>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>