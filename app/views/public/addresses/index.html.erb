<div class="row">
  <div class="col">
    <h1>配送先登録/一覧</h1>
    <%= form_with model:@address,local:true do |f| %>
    <div class="form-group">
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code, class: 'form-control address_postal_code' %>
    </div>
    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_area :address, class: 'form-control address_address' %>
    </div>
    <div class="form-group">
      <%= f.label :receve_name %>
      <%= f.text_area :receve_name, class: 'form-control address_receve_name' %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: 'form-control btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>