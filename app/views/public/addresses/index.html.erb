<div class="row m-4">
  <div class="col">
    <h5 class="d-inline bg-gray pr-3 pl-3">配送先登録/一覧</h5>
  </div>
</div>
  <%= form_with model: @address,local:true do |f| %>
    <%= render 'shaerd/error_messages', object: f.object %>
    <%= f.hidden_field :customer_id, value: current_customer.id %>
    <div class="form-group row">
        <%= f.label :postal_code, '郵便番号（ハイフンなし）',  class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-3">
        <%= f.text_field :postal_code, class: 'form-control address_postal_code', placeholder: '0000000' %>
      </div>
    </div>
    <div class="form-group row">
        <%= f.label :street_address, '住所', class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-4">
        <%= f.text_field :street_address, class: 'form-control address_street_address', placeholder: '東京都渋谷区代々木神園0-0' %>
      </div>
    </div>
    <div class="form-group row">
        <%= f.label :receve_name, '宛名', class: 'col-sm-3 col-form-label' %>
      <div class="col-sm-3">
        <%= f.text_field :receve_name, class: 'form-control address_receve_name', placeholder: '令和道子' %>
      </div>
      <div class="col-sm-1">
      </div>
      <div class="col-sm-2">
        <%= f.submit '新規登録', class: 'form-control btn btn-success btn-sm' %>
      </div>
    </div>
  <% end %>
<div class="row">
  <div class="col-sm-8">
    <table class="table table-bordered">
      <thead>
        <tr class="bg-gray">
          <th style="width: 15%">郵便番号</th>
          <th style="width: 30%">住所</th>
          <th style="width: 15%">宛名</th>
          <th style="width: 30%"></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td>
              <%= address.postal_code %>
            </td>
            <td>
              <%= address.street_address %>
            </td>
            <td>
              <%= address.receve_name %>
            </td>
            <td class="d-flex justify-content-around">
              <%= link_to '編集する', edit_address_path(address), class: 'btn btn-success btn-sm' %>
              <%= link_to '削除する', address_path(address), method: :delete, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>